.custom_nav {
    padding-bottom: 10rpx;
}

.tab_w {
    position: fixed;
    z-index: 100;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
}

.tab_item_w {
    display: flex;
    height: 100%;
}

.tab_item {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    margin-right: 40rpx;
    font-size: 34rpx;
    color: rgba(256, 256, 256, 0.5);
    border-bottom: 4rpx solid rgb(250, 145, 68);
    transition: all 0.3s;
}

.tab_item.active {
    color: #fff;
    border-bottom: 4rpx solid rgba(256, 256, 256, 1);
}

.delete {
    padding: 10rpx;
    display: flex;
    align-items: center;
    opacity: 0;
    transition: all 0.3s;
}

.delete .iconfont {
    font-size: 34rpx;
    color: #fff;
}

.delete.active {
    opacity: 1;
}

.delete:active {
    background-color: rgba(256, 256, 256, 0.1);
}

.swiper {
    position: absolute;
    bottom: 0;
    z-index: 1;
    width: 100%;
    height: auto;
    margin-top: 10rpx;
}

.swiper_item {
    position: relative;
    padding-top: 20rpx;
}

.comic_scroll {
    width: 100%;
    height: 100%;
}

.comic_item {
    float: left;
    position: relative;
    width: 224rpx;
    height: 410rpx;
    margin-left: 20rpx;
}

.comic_item_img {
    width: 100%;
    height: 300rpx;
    border-radius: 8rpx;
    border: 1rpx solid #f0f0f0;
    overflow: hidden;
}

.comic_item_title {
    margin-top: 15rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.comic_item_bottom_w {
    height: 80rpx;
}

.comic_item_new {
    margin-top: 15rpx;
    font-size: 22rpx;
    line-height: 22rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.empty_list {
    position: absolute;
    top: 50%;
    width: 100%;
    margin-top: -80rpx;
    line-height: 30rpx;
    font-size: 30rpx;
    text-align: center;
}

.empty_list:before {
    content: "\e608";
    display: block;
    height: 100rpx;
    margin-bottom: 40rpx;
    line-height: 100rpx;
    font-size: 100rpx;
    font-family: 'iconfont';
    text-align: center;
}

button.login_btn {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300rpx;
    margin: -45rpx 0 0 -150rpx;
    height: 90rpx;
    background-color: rgba(250, 145, 68, 0.8);
    border: 1rpx solid #f0f0f0;
    border-radius: 6rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
}

button.login_btn.button-hover {
    background-color: rgba(250, 145, 68, 1);
}

/* 没有更多了 */

.loading_tip {
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
}

.loading_tip.nomore::before {
    font-family: 'iconfont';
    content: '\e61c';
    display: inline-block;
    margin-right: 10rpx;
}
