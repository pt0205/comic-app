/**index.wxss**/

.blur_bg {
    position: absolute;
    top: 10%;
    bottom: 0;
    width: 100%;
    filter: blur(80rpx);
    overflow: hidden;
    z-index: -1;
}

.blur_bg image {
    width: 100%;
    height: 90%;
    margin-top: 10%;
    opacity: 0.25;
}

.tab_w {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
}

.tab_item_w {
    display: flex;
}

.tab_item {
    width:100rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    color: rgba(256, 256, 256, 0.3);
    border-bottom: 4rpx solid rgba(256, 256, 256, 0.3);
    text-align: center;
}

.tab_item.active {
    color: #fff;
    border-bottom: 4rpx solid rgba(256, 256, 256, 1);
}

.delete {
    padding: 10rpx;
    display: flex;
    align-items: center;
}

.delete image{
    width: 34rpx;
}

.delete:active {
    background-color: rgba(256, 256, 256, 0.1)
}

.swiper {
    position: absolute;
    top: 120rpx;
    bottom: 0;
    z-index: 1;
    width: 100%;
    height: auto;
}

.swiper_item {
    position: relative;
}

.comic_scroll {
    width: 100%;
    height: 100%;
}

.item {
    float: left;
    position: relative;
    width: 224rpx;
    height: 360rpx;
    margin-left: 20rpx;
}

.item_img {
    width: 100%;
    height: 280rpx;
    border: 4rpx solid #fff;
}

.item_title {
    position: absolute;
    bottom: 84rpx;
    height: 50rpx;
    left: 4rpx;
    right: 4rpx;
    padding-left: 10rpx;
    line-height: 50rpx;
    background-color: rgba(0, 0, 0, 0.65);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 24rpx;
    color: #fff;
}

.item_bottom_w {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    font-size: 24rpx;
    line-height: 54rpx;
}

.item_new {
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #d8d8d8;
}

.item_time {
    flex-shrink: 0;
    color: #38ffff;
}

.empty_list {
    position: absolute;
    top: 50%;
    width: 100%;
    margin-top: -50rpx;
    line-height: 24rpx;
    color: #cdcdcd;
    font-size: 30rpx;
    text-align: center;
}

button.login_btn {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300rpx;
    height: 90rpx;
    margin: -45rpx 0 0 -150rpx;
    line-height: 90rpx;
    border: 1rpx solid #fff;
    background-color: rgba(255, 255, 255, 0.1);
    font-size: 36rpx;
    color: #fff;
}

button.login_btn.button-hover {
    background-color: rgba(255, 255, 255, 0.05);
}

/* 没有更多了 */

.loading_tip {
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #cdcdcd;
    font-size: 24rpx;
}

.loading_tip image {
    width: 30rpx;
    margin-right: 10rpx;
}