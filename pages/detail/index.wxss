.container {
    position: relative;
    padding-top: 30rpx;
}

.menu_btn_w {
    display: flex;
    width: 240rpx;
    height: 64rpx;
    border: 2rpx solid #d8d8d8;
    border-radius: 8rpx;
    margin: 0 auto 20rpx;
    background-color: #785948;
}

.menu_btn_w button {
    width: 50%;
    line-height: 60rpx;
    border-style: none;
    font-size: 26rpx;
    color: #d8d8d8;
    border-radius: 0;
}

button.active {
    background-color: rgba(255, 255, 255, 0.2);
}

button.button-hover {
    background-color: rgba(255, 255, 255, 0.2) !important;
    color: #38ffff !important;
}

.detail_w, .catalog_w {
    position: absolute;
    top: 150rpx;
    bottom: 100rpx;
    left: 60rpx;
    right: 60rpx;
    border-radius: 8rpx;
    border: 6rpx solid #fff;
    overflow: hidden;
}

.detail_bg, .catalog_bg {
    width: 100%;
    height: 100%;
    filter: blur(30px);
}

.detail_layer, .catalog_layer {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.58);
}

.detail_head_w {
    display: flex;
    padding: 40rpx 30rpx;
}

.detail_cover {
    width: 200rpx;
    height: 230rpx;
    border-radius: 8rpx;
}

.detail_head_right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 230rpx;
    margin-left: 40rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #fff;
}

.detail_title {
    color: #ff933f;
}

.detail_author_category_w {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 90rpx;
    margin-left: 15rpx;
    margin-top: 10rpx;
    border-left: 5rpx solid #999;
}

.detail_author_w, .detail_category_w {
    display: flex;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #fff;
}

.detail_author_category_w .label {
    margin: 0 20rpx 0 10rpx;
}

.detail_author {
    color: #38ffff;
    margin-right: 30rpx;
}

.detail_category {
    margin-right: 10rpx;
}

.detail_des_w {
    margin-top: 30rpx;
}

.detail_des_title {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    background-color: rgba(256, 256, 256, 0.1);
    font-size: 26rpx;
    color: #fff;
}

.detail_des {
    position: absolute;
    top: 520rpx;
    bottom: 0;
    width: 100%;
    padding: 30rpx;
    font-size: 26rpx;
    color: #999;
}

.catalog_head_w {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 250rpx;
    border-bottom: 20rpx solid #38ffff;
}

.catalog_num_w {
    text-align: center;
}

.catalog_num {
    font-size: 70rpx;
    line-height: 70rpx;
    color: #38ffff;
}

.catalog_new {
    margin-top: 30rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #fff;
}

.catalog_name,.catalog_continue {
    font-size: 24rpx;
    line-height: 54rpx;
    color: #999;
}

.catalog_name:active, .catalog_continue:active {
    background-color: rgba(256, 256, 256, 0.1);
}

.catalog_list_w {
    position: absolute;
    top: 250rpx;
    bottom: 0;
    width: 100%;
    padding-bottom: 30rpx;
}

.catalog_item {
    height: 60rpx;
    background-color: rgba(256, 256, 256, 0.1);
    margin: 0 30rpx 20rpx 30rpx;
    color: #fff;
    font-size: 24rpx;
    line-height: 60rpx;
    padding: 0 20rpx;
}

.catalog_item:active {
    background-color: rgba(256, 256, 256, 0.3);
}

.catalog_item:first-child {
    margin-top: 30rpx;
}