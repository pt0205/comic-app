.center_bg {
    position: absolute;
    top: 0;
    z-index: 0;
    width: 100%;
    height: 400rpx;
    filter: blur(50rpx);
    overflow: hidden;
    opacity: 0.2;
}

.center_bg image {
    width: 100%;
    height: 90%;
    margin-top: 10%;
}

.top_w {
    position: relative;
    z-index: 1;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 40rpx;
}

button.head_btn {
    width: 300rpx;
    height: 90rpx;
    line-height: 90rpx;
    border: 1rpx solid #fff;
    background-color: rgba(255, 255, 255, 0.1);
    font-size: 36rpx;
    color: #fff;
}

button.button-hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.head_name_w {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.head {
    width: 180rpx;
    height: 180rpx;
    border: 8rpx solid #be8959;
    border-radius: 6rpx;
}

.name {
    margin-top: 30rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #fff;
    text-shadow: 0 0 10rpx #000;
}

.menu_w {
    position: absolute;
    top: 400rpx;
    bottom: 0;
    width: 100%;
    background-color: #f0f0f0;
}

.menu_item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    margin: 40rpx 20rpx;
    padding: 0 20rpx;
    background-color: #fff;
    border-radius: 6rpx;
    box-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, 0.1);
    font-size: 30rpx;
    color: #7f5d4f;
}

.menu_item image {
    height: 40rpx;
    width: 40rpx;
}

.menu_item:active {
    background-color: #f6f6f6;
}
