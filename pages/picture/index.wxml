<!--index.wxml-->
<view class='container'>
    <scroll-view class='scroll_w' scroll-y scroll-top='{{scrollTop}}' lower-threshold='2000rpx' bindscrolltolower='loadMore' bindscroll='scroll' scroll-into-view='{{picIndex}}'>
        <view class='image_w' bindtouchstart='touchStartHandle' bindtouchmove='touchMoveHandle'>
            <image wx:for='{{pics}}' wx:key='{{index}}' src='{{item.url}}' style='width:{{imgScale*100+"%"}}' class='{{item.showId && "chapter_"+item.chapterid}}' id='{{"pic_"+index}}' mode='widthFix' data-index='{{index}}' bindtap='clickToScale'></image>
        </view>
    </scroll-view>
</view>