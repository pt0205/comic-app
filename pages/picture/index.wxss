.custom_nav {
    top: -112px;
    opacity: 0;
    transition: all 0.3s;
    background-color: rgba(0, 0, 0, 0.8);
}

.custom_nav.active {
    top: 0;
    opacity: 1;
}

.scroll_w {
    height: 100%;
    background-color: #7e6353;
}

.image_horizontal_scroll_w {
    width: 100%;
    min-height: 100%;
    overflow: auto;
}

.image_w {
    width: 100%;
}

.scroll_w image {
    display: block;
}

.bottom_loading {
    text-align: center;
    background: #fff;
    color: #333;
    font-size: 24rpx;
    line-height: 80rpx;
}

.top_loading {
    background: #7e6353;
    font-size: 30rpx;
    line-height: 100rpx;
    height: 100rpx;
    color: #d8d8d8;
    text-align: center;
}

.top_loading:active {
    color: #38ffff;
    background: #584d42;
}

/* 底部菜单-begin */

.bottom_btn_w {
    position: fixed;
    bottom: -284rpx;
    left: 0;
    width: 100%;
    opacity: 0;
    background-color: rgba(0, 0, 0, 0.8);
    color: #fff;
    font-size: 30rpx;
    overflow: hidden;
    transition: all 0.3s;
    box-sizing: content-box;
}

.bottom_btn_w.active {
    opacity: 1;
    padding-bottom: 30rpx;
    bottom: 0;
}

.bottom_menu_w {
    display: flex;
    justify-content: space-around;
    height: 80rpx;
}

.menu_item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    font-size: 20rpx;
    line-break: 20rpx;
    color: #fff;
    opacity: 0.5;
}

.menu_item.active {
    opacity: 1;
}

.menu_item image {
    width: 80rpx;
}

/* 底部菜单-end */

/* 进度调整-begin */

.slider {
    flex-grow: 1;
    margin: 0;
}

.total {
    font-size: 24rpx;
    color: #999;
}

.pre_chapter, .next_chapter {
    padding: 20rpx 30rpx;
    font-size: 0;
}

.pre_chapter {
    padding-right: 60rpx;
}

.process_w {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.next_chapter {
    padding-left: 60rpx;
}

.pre_chapter image, .next_chapter image {
    width: 40rpx;
}

/* 进度调整-end */

/* 回到顶部按钮-begin */

.scroll_top {
    position: fixed;
    bottom: -100rpx;
    right: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.8);
    opacity: 0;
    transition: 0.3s;
}

.scroll_top.active {
    bottom: 300rpx;
    opacity: 1;
}

.scroll_top image {
    width: 40rpx;
}

/* 回到顶部按钮-end */

.bad_chapter {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ccc;
    font-size: 30rpx;
    color: #666;
}

/* 亮度调整-begin */

.light_w .slider {
    margin: 0 40rpx;
}

.light_slider_w {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    padding: 0 40rpx;
}

.light_switch_w {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 136rpx 20rpx 120rpx;
    font-size: 24rpx;
    color: #fff;
}

/* 亮度调整-end */

/* 目录-begin */

.catalog_w {
    position: fixed;
    top: 0;
    bottom: 0;
    left: -70%;
    width: 70%;
    opacity: 0;
    background: linear-gradient(#000000e8, #000000bb);
    transition: all 0.4s;
}

.catalog_w.active {
    left: 0;
    opacity: 1;
}

.catalog_bg {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: blur(80rpx);
    opacity: 0.2;
}

.catalog_scroll_w {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
}

.catalog_item {
    height: 100rpx;
    margin: 0 30rpx;
    color: #ccc;
    font-size: 24rpx;
    line-height: 100rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    border-bottom: 1rpx solid rgba(255, 255, 255, 0.15);
}

.catalog_item:active {
    background-color: rgba(255, 255, 255, 0.1);
}

/* 目录-end */
