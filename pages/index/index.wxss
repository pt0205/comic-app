/**index.wxss**/

.search_w {
    width: 710rpx;
    height: 72rpx;
    margin: 16rpx 20rpx;
    border-radius: 8rpx;
    background: rgba(256, 256, 256, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ddd;
    font-size: 30rpx;
}

.search_w image {
    width: 38rpx;
    height: 38rpx;
    margin-right: 10rpx;
}

.category_w {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
    color: #d8d8d8;
    font-size: 34rpx;
}

.category_w .scroll_w {
    overflow: auto;
    flex-grow: 1;
    white-space: nowrap;
}

.category_w .scroll_w .item {
    margin-left: 50rpx;
    padding: 0;
    display: inline-block;
    color: #d8d8d8;
    font-size: 34rpx;
    border-style: none;
}

button.button-hover {
    background-color: transparent;
    color: #38ffff !important;
}

.category_w .fixed_menu {
    flex-shrink: 0;
    flex-grow: 0;
    margin: 0 50rpx;
}

.banner_w {
    position: relative;
    height: 345rpx;
    background-size: cover;
}

.banner_w image {
    width: 100%;
    height: 100%;
}

.banner_bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 62rpx;
    padding: 0 30rpx;
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-size: 26rpx;
}

.banner_now {
    color: #38ffff;
}

.category_title_w {
    height: 84rpx;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    color: #d8d8d8;
}

.category_title_w .left_w {
    display: flex;
    align-items: center;
}

.vertical_line {
    width: 6rpx;
    height: 26rpx;
    background-color: #38ffff;
}

.category_title {
    margin-left: 16rpx;
}

button.read_more {
    display: inline-block;
    padding: 0;
    margin: 0;
    border-style: none;
    font-size: 26rpx;
    color: #d8d8d8;
}

.read_more:before {
    content: '•••';
}
