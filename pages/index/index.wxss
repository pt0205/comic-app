.custom_nav {
    padding-bottom: 10rpx;
}

.recommend_comic_scroll {
    height: 100%;
}

.top_w {
    position: relative;
}

.search_w {
    position: fixed;
    z-index: 99;
    left: 20rpx;
    display: flex;
    align-items: center;
}

.search {
    padding: 0 20rpx;
    width: 100%;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    border: 1rpx solid rgba(256, 256, 256, 0.3);
    background-color: rgba(0, 0, 0, 0.15);
    font-size: 24rpx;
    color: #fff;
}

.search:active {
    background-color: rgba(0, 0, 0, 0.3);
}

.search .iconfont {
    margin-right: 16rpx;
}

.banner_w {
    position: relative;
}

.banner_item {
    height: 100%;
}

.banner_bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 140rpx;
    padding: 60rpx 30rpx 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.9));
    color: #fff;
    font-size: 26rpx;
}

/* 栏目 */

.column_w {
    background-color: #fff;
    margin-top: 10rpx;
}

/* 分类标题-begin */

.category_title_w {
    height: 100rpx;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 34rpx;
    font-weight: bolder;
}

.category_title_w .left_w {
    display: flex;
    align-items: center;
}

.category_title {
    margin-left: 0rpx;
}

.read_more {
    display: inline-block;
    padding: 10rpx 16rpx;
    border-radius: 24rpx;
    /* background: rgba(250, 145, 68, 0.1); */
    font-size: 24rpx;
    color: rgba(250, 145, 68, 1);
}

.read_more:before {
    content: '更多 \e601';
    font-family: "iconfont";
}

.read_more:active {
    background: rgba(250, 145, 68, 0.2);
}

/* 分类标题-end */

/* 横向滚动容器 */

.hot_scroll {
    overflow: auto;
    white-space: nowrap;
}

/* 漫画item-begin */

.hot_item_w {
    position: relative;
}

.hot_item_w:last-child {
    padding-bottom: 40rpx;
}

.hot_item {
    display: inline-block;
    margin-right: 20rpx;
}

.hot_item:first-child {
    margin-left: 20rpx;
}

.hot_item:last-child {
    margin-right: 20rpx;
}

.hot_img {
    width: 224rpx;
    height: 300rpx;
    border-radius: 8rpx;
    border: 1rpx solid #f0f0f0;
    overflow: hidden;
}

.hot_title {
    width: 180rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 20rpx;
    line-height: 30rpx;
    font-size: 28rpx;
    text-align: left;
}

.hot_time {
    width: 180rpx;
    margin-top: 15rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    text-align: left;
}

/* 漫画item-end */